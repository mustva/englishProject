@using System.Security.Claims
@using englishProject.Infrastructure
@using englishProject.Infrastructure.HelperClass
@model  List<Claim>
@{
    ViewBag.Title = "deneme";
    List<ScoreChart> chart = ViewBag.chart;

}
@section scripts
{
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script type="text/javascript">
        google.charts.load('current', { 'packages': ['corechart'] });
        google.load('visualization', '1.0', { 'packages': ['corechart'] });
        $(document).ready(function() {

            var chart = @Html.HtmlConvertToJson(chart);
            var drawTable = function () {
                var data = new google.visualization.DataTable();
                data.addColumn('string', 'Tarih');
                data.addColumn('number', 'Hedef puan');
                data.addColumn('number', 'Kazanmış olduğun puan');
                data.addRows(chart.length);
                $.each(chart, function (i, val) {
                    data.setCell(i, 0, val.date);
                    data.setCell(i, 1, val.targetScore);
                    data.setCell(i, 2, val.currentScore);
                });

                var options = {
                    backgroundColor: '#f5f5f5',

                    hAxis: { title: 'Tarih', titleTextStyle: { color: '#333' } },
                    vAxis: { minValue: 0 },
                    legend: { position: 'top' }
                };

                var charts = new google.visualization.AreaChart(document.getElementById('chart_div'));
                charts.draw(data, options);
            };
            drawTable();
        })
    </script>
}

<div id="chart_div"></div>