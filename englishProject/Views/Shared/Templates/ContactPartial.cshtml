@model englishProject.Infrastructure.ViewModel.ContactVM
<form id="ContactFormum">
    <div class="row">
        <div class="col-lg-12">

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">

                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "isminiz.." })
                        @Html.ValidationMessageFor(x => x.Name)
                    </div>
                    <div class="form-group">

                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email adresiniz.." })
                        @Html.ValidationMessageFor(x => x.Email)
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @placeholder = "Telefon numaranız.." })
                        @Html.ValidationMessageFor(x => x.Phone)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.TextAreaFor(x => x.Message, new { @class = "form-control", @placeholder = "Mesajınız.." })
                        @Html.ValidationMessageFor(x => x.Message)
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-lg-12 text-center">
                    <div id="success"></div>
                    <button id="btnContact" type="button" class="btn btn-primary btn-lg">Mesajı gönder</button>
                </div>
            </div>
        </div>
    </div>
</form>