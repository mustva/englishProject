@model englishProject.Infrastructure.ViewModel.CommentIssueVM
<div id="commentSaveWrapper" class="row">
    <div class="col-sm-2 text-right" style="padding-right: 0">

        <img class="img-thumbnail img-circle hidden-xs" style="width: 80px; height: 80px" src="/Content/images/user.png">
    </div>
    <div class="col-sm-10">

        <form id="commentSaveForm" data-bind="submit:send">
            <div class="alert alert-update" style="padding: 6px; margin-bottom: 5px; display: none" data-bind="visible:replyShow">
                <a data-bind="click:replyCancel" href="#" style="color: red;"><i class="fa fa-times"></i></a>
                <strong data-bind="text:replyName"></strong> üyesine cevap ver
            </div>
            <div class="form-group">
                @Html.TextAreaFor(x => x.CommentIssue, new { @class = "form-control", @data_bind = "value:viewModel.CommentIssue,attr: {placeholder: ph}", @Placeholder = "bu seviye için yorumunuz...." })
                @Html.ValidationMessageFor(x => x.CommentIssue)
            </div>

            <button type="submit" data-bind="disable:loading" class="btn btn-primary pull-right"><i style="display: none" data-bind="visible:loading" class="fa fa-refresh fa-spin"></i> <span data-bind="text:btnText"></span></button>

            <div id="result" style="margin-bottom: 0px;padding: 6px;margin-right: 5px;display: none;" data-bind="text:resultText" class="alert alert-warning pull-right"></div><i class="clearfix"></i>
        </form>
    </div>
</div>