@using englishProject.Infrastructure.ViewModel
@model englishProject.Infrastructure.ViewModel.UserSignUpVM

<div id="signUpWrapper" data-bind="visible:!showlogin()">

    <div class="up">
        <div class="col-xs-12">
            <div class="col-xs-8">

                <strong class="text-muted">Üyelik Form</strong>
            </div>
            <div class="col-xs-4">

                <a data-bind="click:changes" href="#"><i class="fa fa-arrow-left"></i> Geri</a>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>

    <div class="text-center" data-bind="visible:signupLoading()">
        <h2><i class="fa fa-cog fa-spin"></i></h2>
        <p class="text-muted">  giriş yapılıyor</p>
    </div>

    <div data-bind="visible:!signupLoading()">
        <div class="help-block text-center">

            <small class="text-danger" data-bind="visible:signUpError"><strong><i class="fa fa-exclamation-triangle"></i> <span id="signUpErrorText"></span></strong></small>
        </div>
        <div class="col-md-12">
            <form id="loginForm" name="loginForm" data-bind="submit:validateSignUp">
                <div class="form-group">

                    @Html.TextBoxFor(x => x.Email, new { @data_bind = "value:UserSignUpVM.email", @class = "form-control", @placeholder = "Email adresiniz" })
                    @Html.ValidationMessageFor(x => x.Email)
                </div>
                <div class="form-group">

                    @Html.TextBoxFor(x => x.Password, new { @data_bind = "value:UserSignUpVM.password", @class = "form-control", @placeholder = "Şifreniz" })
                    @Html.ValidationMessageFor(x => x.Password)
                </div>
                <div class="form-group">

                    @Html.TextBoxFor(x => x.ConfirmPassowrd, new { @data_bind = "value:UserSignUpVM.confirmPassword", @class = "form-control", @placeholder = "Şifreniz tekrar" })
                    @Html.ValidationMessageFor(x => x.ConfirmPassowrd)
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Üye ol</button>
                </div>
            </form>
        </div>
    </div>
</div>