@model englishProject.Models.Level

@{
    ViewBag.Title = "UpdateLevel";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>UpdateLevel</h2>

@using (Html.BeginForm("UpdateLevel", "Level", FormMethod.Post))
{
    @Html.HiddenFor(x => x.levelNumber)
    @Html.HiddenFor(x => x.kind)
    <div class="form-horizontal">
        <h4>Level</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.levelName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.EditorFor(model => model.levelName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.levelName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.levelPicture, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.EditorFor(model => model.levelPicture, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.levelPicture, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}