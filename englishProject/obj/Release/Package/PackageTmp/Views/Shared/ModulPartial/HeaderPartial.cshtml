@using englishProject.Models
@model englishProject.Models.Level

<div style="border-bottom: 4px solid #57b3e5;padding: 5px 0px;">
    <div class="pull-left">

        <ol class="breadcrumb examHeaderSubLevel" style="margin-bottom: 0px; padding-left: 0px;">

            <li data-bind="css: { subLevelActive:subLevelNumber()==1}" class="active"> Temel </li>
            <li><i class="fa fa-chevron-right text-muted"></i></li>
            <li data-bind="css: { subLevelActive:subLevelNumber()==2 }" class="active"> İleri </li>

            @if (Model.levelSubLevel > 2)
            {
                <li><i class="fa fa-chevron-right text-muted"></i></li>
                <li data-bind="css: { subLevelActive:subLevelNumber()==3 }" class="active"> Mükemmel</li>
            }
        </ol>
    </div>
    <div class="pull-right">
        <button data-toggle="tooltip" data-placement="left" title="Bu seviye için yorum yap/sorun bildir" id="btnCommentIssue2" type="button" class="btn btn-info  hidden-lg hidden-md"><i class="fa fa-plus-circle"></i></button>
        <button id="stopQuiz" type="button" class="btn btn-danger" data-toggle="modal" data-target=".quizModal"><i class="fa fa-stop-circle"></i> Testti  bitir</button>
    </div>

    <i class="clearfix"></i>
</div>
