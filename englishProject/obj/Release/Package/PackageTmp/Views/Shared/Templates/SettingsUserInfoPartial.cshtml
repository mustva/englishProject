@using englishProject.Infrastructure.Users

@model englishProject.Infrastructure.ViewModel.UserViewModel
<div id="UserInfoWrapper">
    <h4 class="bg-primary">Üyelik bilgilerim</h4>

    <div class="panel-body">
        <form id="UserInfoForm" class="form-horizontal">

            <div class="col-md-6">

                <div class="form-group">
                    <label for="FirstName" class="col-sm-4 control-label">İsim:</label>
                    <div class="col-sm-8">

                        <input type="text" value="@Model.Name" class="form-control" id="Name" name="Name" placeholder="İsminiz">
                    </div>
                </div>

                <div class="form-group">
                    <label for="FirstName" class="col-sm-4 control-label">Soy isim:</label>
                    <div class="col-sm-8">

                        <input type="text" class="form-control" value="@Model.SurName" id="SurName" name="SurName" placeholder="Soyisminiz">
                    </div>
                </div>

                <div class="form-group">
                    <label for="BirthDay" class="col-sm-4 control-label">Doğum tarihi:</label>
                    <div class="col-sm-8">

                        @Html.TextBoxFor(x => x.BirthDay, "{0:dd/MM/yyyy}", new { @class = "form-control", @placeHolder = "gg.aa.yyyy" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="BirthDay" class="col-sm-4 control-label">Şehir:</label>
                    <div class="col-sm-8">
                        @Html.DropDownList("City", null, "şehir seçiniz", new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="BirthDay" class="col-sm-4 control-label">Telefon:</label>
                    <div class="col-sm-8">

                        <input type="tel" class="form-control" id="PhoneNumber" value="@Model.PhoneNumber" name="PhoneNumber" placeholder="(555) 555 55 55">
                    </div>
                </div>

                <div class="form-group">
                    <label for="BirthDay" class="col-sm-4 control-label">Cinsiyet:</label>
                    <div class="col-sm-8">
                        <div class="radio">
                            <label>
                                <input type="radio" checked="checked" name="Gender" id="1" value="1">
                                Erkek
                            </label>
                            <label>
                                <input type="radio" name="Gender" id="0" value="0">
                                Bayan
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">

                <div class="form-group">
                    <label for="FirstName" class="col-sm-4 control-label">Kullanıcı ismi:</label>
                    <div class="col-sm-8">

                        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeHolder = "Kullanıcı isminiz" })
                        @Html.ValidationMessageFor(x => x.UserName)
                    </div>
                </div>
                <div class="form-group">
                    <label for="Email" class="col-sm-4 control-label">Email adres:</label>
                    <div class="col-sm-8">

                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeHolder = "Kullanıcı isminiz" })
                        @Html.ValidationMessageFor(x => x.Email)
                    </div>
                </div>

                @if (string.IsNullOrEmpty(Model.Password))
                {
                    <div class="form-group">
                        <label for="Password" class="col-sm-4 control-label">Şifre belirle:</label>
                        <div class="col-sm-8">

                            @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeHolder = "Normal giriş için şifre belirle" })
                            @Html.ValidationMessageFor(x => x.Password)
                        </div>
                    </div>
                }

                <div class="col-sm-8 col-sm-offset-4 text-center">

                    <img id="PicturePath" style="width:150px; height: 150px;" src="@Model.PicturePath" class=" img-circle img-thumbnail PicturePath" />
                    <hr />

                    <div class="fileUpload btn btn-primary">
                        <span><i class="fa fa-camera"></i> <strong></strong>  Resim yükle</span>
                        <input class="upload" name="fileUpload" id="fileUpload" type="file" />
                    </div>
                </div>
            </div>

            <div class="col-md-12">

                <button id="btnUserInfoUpdate" class="btn btn-primary btn-lg" type="submit"><i class="fa fa-refresh fa-spin hidden"></i> Güncelle</button>
            </div>
        </form>
    </div>
</div>