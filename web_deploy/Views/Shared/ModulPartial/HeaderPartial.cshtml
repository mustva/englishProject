@using englishProject.Models
@using log4net.Appender
@model englishProject.Models.Level

<div class="text-center img-rounded" style="background-color:#457fca; padding: 5px; color: white;">
    <span><i class="fa fa-cube"></i> @Model.Box.boxName <i class="fa fa-hand-o-right"></i> <strong> @(Model.levelNumber)</strong>.seviye</span>
</div>

<div style="border-bottom: 4px solid #57b3e5;padding: 5px 0px;">
    <div class="pull-left">

        <ol class="breadcrumb examHeaderSubLevel" style="margin-bottom: 0px; padding-left: 0px;">

            <li data-bind="css: { subLevelActive:subLevelNumber()==1}" class="active"> Temel </li>
            <li><i class="fa fa-chevron-right text-muted"></i></li>
            <li data-bind="css: { subLevelActive:subLevelNumber()==2 }" class="active"> İleri </li>

            @if (Model.levelSubLevel > 2)
            {
                <li><i class="fa fa-chevron-right text-muted"></i></li>
                <li data-bind="css: { subLevelActive:subLevelNumber()==3 }" class="active"> Mükemmel</li>
            }
        </ol>
    </div>
    <div class="pull-right">
        <button data-toggle="tooltip" data-placement="left" title="Bu seviye için yorum yap/sorun bildir" id="btnCommentIssue2" type="button" class="btn btn-info  hidden-lg hidden-md"><i class="fa fa-plus-circle"></i></button>
        <button id="stopQuiz" type="button" class="btn btn-danger" data-toggle="modal" data-target=".quizModal"><i class="fa fa-stop-circle"></i> Testti  bitir</button>
    </div>

    <i class="clearfix"></i>
</div>

<div id="stopQuizModal" class="modal fade quizModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Uyarı</h4>
            </div>
            <div class="modal-body">
                <p>Testten çıkış yaparsanız kazanmış olduğunuz puanları kaybedeceksiniz.<strong>Biraz daha sabredip bitirmelisin bence :)</strong></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">İptal</button>
                <a href="@Url.Action("index","user")" class="btn btn-danger">Testten çık</a>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->