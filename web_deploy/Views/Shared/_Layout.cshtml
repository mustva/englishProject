@using System.Web.UI.HtmlControls
@using englishProject.Infrastructure.Users
@using englishProject.Infrastructure.ViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - wordboxes.net</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="page-wrap">
        @Html.Partial("MenuTemplate/TopMenu")

        <div class="container">
            <div class="row">
                <div class="col-md-3" id="leftMenu">
                    @RenderSection("Left", false)
                </div>
                <div class="col-md-9">
                    @RenderBody()
                </div>
            </div>
        </div>
        <div class="push"></div>
    </div>
    @Html.Partial("Templates/FooterPartial")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>