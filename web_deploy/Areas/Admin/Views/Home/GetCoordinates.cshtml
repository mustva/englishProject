@{
    ViewBag.Title = "GetCoordinates";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}
@section Scripts
{
    <script language="JavaScript">

        $(document).ready(function () {
            var t;
            var t2;
            $('#pointer_div').click(function (e) {
                var offset = $(this).offset();
                $("#x").val(e.pageX - offset.left);
                $("#y").val(e.pageY - offset.top);
                $("#icon").css("top", parseInt($("#y").val()) - 7 + "px");
                $("#icon").css("left", parseInt($("#x").val()) - 7 + "px");

                t = (parseInt($("#y").val()) - 7) + "," + (parseInt($("#x").val()) - 7);

                $("#total").val(t + "," + t2);

            });
            $("#xSlider,#ySlider").mousemove(function () {

                $("#x1").val($("#xSlider").val());
                $("#y1").val($("#ySlider").val());

                //$("#pointer_div").stop().animate({
                //    backgroundPositionX: $("#xSlider").val() + 'px',
                //    backgroundPositionY: $("#ySlider").val() + 'px'
                //}, 100, 'linear');

                $("#pointer_div").css('background-position', $("#xSlider").val() + 'px ' + $("#ySlider").val() + 'px');

                t2 = (parseInt($("#xSlider").val())) + "," + (parseInt($("#ySlider").val()));

                $("#total").val(t + "," + t2);

            });

        });
    </script>

}
<div class="container">
    <div class="row">
        <h2>Resim Kordinat alma</h2>

        <div class="col-md-6">
            <input id="xSlider" type="range" min="-1000" value="0" max="1000" step="1">
            <input id="ySlider" type="range" min="-1000" value="0" max="1000" step="1">
        </div>
        <div class="col-md-10">
            <div class="img-rounded " id="pointer_div" style="background-image:url('/Pictures/Moduls/BodyModul/body.jpg');height:400px; background-position: 0px 0px; background-repeat: no-repeat; position: relative;">
                <i id="icon" class="fa fa-bullseye fa-2x" style="position: absolute;top:1px ;left: 1px;color: red; font-size: 1.3em;"></i>
            </div>
        </div>
        <div class="col-md-12">
            <div class="col-md-3">
                x: <input id="x" type="number" class="form-control" />
                Y: <input id="y" type="number" class="form-control" />
            </div>
            <div class="col-md-3">
                background-x: <input id="x1" type="number" class="form-control" />
                background-y: <input id="y1" type="number" class="form-control" />
            </div>
            <div class="col-md-12">
                <input type="text" class="form-control" id="total" />
            </div>
        </div>
    </div>
</div>
